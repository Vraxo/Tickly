<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Core Palette -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#AC99EA</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#121212</Color>
    <Color x:Key="DarkGrayBackground">#1E1E1E</Color>
    <Color x:Key="DarkGraySurface">#2C2C2C</Color>
    <Color x:Key="WhiteSmoke">#F5F5F5</Color>
    <Color x:Key="LightGrayText">#D3D3D3</Color>

    <!-- Grays -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Nord Palette -->
    <Color x:Key="NordPolarNight0">#2E3440</Color>
    <Color x:Key="NordPolarNight1">#3B4252</Color>
    <Color x:Key="NordPolarNight2">#434C5E</Color>
    <Color x:Key="NordPolarNight3">#4C566A</Color>
    <Color x:Key="NordSnowStorm0">#D8DEE9</Color>
    <Color x:Key="NordSnowStorm1">#E5E9F0</Color>
    <Color x:Key="NordSnowStorm2">#ECEFF4</Color>
    <Color x:Key="NordFrost0">#8FBCBB</Color>
    <Color x:Key="NordFrost1">#88C0D0</Color>
    <Color x:Key="NordFrost2">#81A1C1</Color>
    <Color x:Key="NordFrost3">#5E81AC</Color>
    <Color x:Key="NordAurora0">#BF616A</Color>
    <Color x:Key="NordAurora1">#D08770</Color>
    <Color x:Key="NordAurora2">#EBCB8B</Color>
    <Color x:Key="NordAurora3">#A3BE8C</Color>
    <Color x:Key="NordAurora4">#B48EAD</Color>

    <!-- Specific Theme Colors -->
    <Color x:Key="PitchBlackBackgroundColor">#000000</Color>
    <Color x:Key="PitchBlackSurfaceColor">#121212</Color>
    <Color x:Key="PitchBlackForegroundColor">#F5F5F5</Color>
    <Color x:Key="PitchBlackSecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="PitchBlackPrimaryActionBackgroundColor">#212121</Color>
    <!-- Gray900 -->
    <Color x:Key="PitchBlackPrimaryActionForegroundColor">#F5F5F5</Color>
    <!-- WhiteSmoke -->

    <Color x:Key="DarkGrayBackgroundColor">#1E1E1E</Color>
    <Color x:Key="DarkGraySurfaceColor">#2C2C2C</Color>
    <Color x:Key="DarkGrayForegroundColor">#E0E0E0</Color>
    <Color x:Key="DarkGraySecondaryTextColor">#B0B0B0</Color>
    <Color x:Key="DarkGrayPrimaryActionBackgroundColor">#404040</Color>
    <!-- Gray600 -->
    <Color x:Key="DarkGrayPrimaryActionForegroundColor">#F5F5F5</Color>
    <!-- WhiteSmoke -->

    <Color x:Key="NordBackgroundColor">#2E3440</Color>
    <Color x:Key="NordSurfaceColor">#3B4252</Color>
    <Color x:Key="NordForegroundColor">#D8DEE9</Color>
    <Color x:Key="NordSecondaryTextColor">#E5E9F0</Color>
    <Color x:Key="NordPrimaryActionBackgroundColor">#5E81AC</Color>
    <!-- NordFrost3 -->
    <Color x:Key="NordPrimaryActionForegroundColor">#2E3440</Color>
    <!-- NordPolarNight0 -->

    <Color x:Key="LightBackgroundColor">#F0F0F0</Color>
    <Color x:Key="LightSurfaceColor">#FFFFFF</Color>
    <Color x:Key="LightForegroundColor">#1F1F1F</Color>
    <Color x:Key="LightSecondaryTextColor">#555555</Color>
    <Color x:Key="LightPrimaryActionBackgroundColor">#512BD4</Color>
    <!-- Primary -->
    <Color x:Key="LightPrimaryActionForegroundColor">#FFFFFF</Color>
    <!-- White -->

    <!-- DYNAMIC THEME RESOURCES (Initialized to system preference or PitchBlack, App.xaml.cs will update) -->
    <Color x:Key="AppBackgroundColor">#000000</Color>
    <Color x:Key="AppSurfaceColor">#121212</Color>
    <Color x:Key="AppForegroundColor">#F5F5F5</Color>
    <Color x:Key="AppSecondaryTextColor">#A0A0A0</Color>
    <Color x:Key="AppPrimaryActionBackgroundColor">#512BD4</Color>
    <!-- Default to Primary (will be overridden) -->
    <Color x:Key="AppPrimaryActionForegroundColor">#000000</Color>
    <!-- Default to Black (will be overridden) -->


    <!-- Brushes (Mostly static, except maybe foreground/background if needed) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>