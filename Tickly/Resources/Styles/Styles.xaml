<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         xmlns:local="clr-namespace:Tickly"
         x:Class="Tickly.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Define the Color resource (initial value will be overridden on startup) -->
            <!-- This COLOR object will be replaced by the C# code -->
            <Color x:Key="AppEffectiveDarkBackgroundColor">#1f1f1f</Color>

            <!-- Define the Brush resource KEY. -->
            <!-- The actual BRUSH OBJECT will be set by C# code later, -->
            <!-- referencing a brush from Colors.xaml. -->
            <!-- Provide a default *inline* color for the initial brush. -->
            <SolidColorBrush x:Key="AppEffectiveDarkBackgroundBrush" Color="#1f1f1f"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
